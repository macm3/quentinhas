<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".provider.ProviderConfigurationsActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_configurations"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

            <TextView
                    android:id="@+id/toolbar_login_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/title_configurations"
                    android:fontFamily="@font/amiko_bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

<ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_configurations">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <android.support.v7.widget.CardView
                android:id="@+id/cardView_1_config_provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/title_card_1_config_provider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="8dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/title_card_1_config_provider" />

                <RelativeLayout
                        android:id="@+id/config_relative_1_provider"
                        android:padding="15dp"
                        android:paddingTop="18.5dp"
                        android:paddingBottom="18.5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_card_1_config_provider">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                        <CheckBox
                                android:id="@+id/check_cash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/toggle_cash"/>

                        <CheckBox
                                android:id="@+id/check_pagseguro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/toggle_pagseguro"/>

                            <Button
                                    android:id="@+id/btn_save_payment"
                                    android:layout_width="100dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="end"
                                    android:background="@color/colorPrimary"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorWhite"
                                    android:text="@string/btn_save"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/cardView_2_config_provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/title_card_2_config_provider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingStart="18dp"
                        android:paddingEnd="8dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="3sp"
                        android:text="@string/title_card_2_config_provider" />

                <RelativeLayout
                        android:id="@+id/config_relative_2_provider"
                        android:padding="15dp"
                        android:paddingTop="18.5dp"
                        android:paddingBottom="18.5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_card_2_config_provider">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                        <TimePicker
                                android:id="@+id/picker_end"
                                android:layout_width="wrap_content"
                                android:layout_height="75dp"
                                android:timePickerMode="spinner"/>

                            <Button
                                    android:id="@+id/btn_save_end_time"
                                    android:layout_width="100dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="end"
                                    android:background="@color/colorPrimary"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorWhite"
                                    android:text="@string/btn_save"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/cardView_3_config_provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/title_card_3_config_provider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingStart="18dp"
                        android:paddingEnd="8dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="3sp"
                        android:text="@string/title_card_3_config_provider" />

                <RelativeLayout
                        android:id="@+id/config_relative_3_provider"
                        android:padding="15dp"
                        android:paddingTop="18.5dp"
                        android:paddingBottom="18.5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_card_3_config_provider">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                        <TimePicker
                                android:id="@+id/picker_pickup"
                                android:layout_width="wrap_content"
                                android:layout_height="75dp"
                                android:timePickerMode="spinner"/>

                            <Button
                                    android:id="@+id/btn_save_pickup"
                                    android:layout_width="100dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="end"
                                    android:background="@color/colorPrimary"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorWhite"
                                    android:text="@string/btn_save"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/cardView_4_config_provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/title_card_4_config_provider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingStart="18dp"
                        android:paddingEnd="8dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="3sp"
                        android:text="@string/title_card_4_config_provider" />

                <RelativeLayout
                        android:id="@+id/config_relative_4_provider"
                        android:padding="15dp"
                        android:paddingTop="18.5dp"
                        android:paddingBottom="18.5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_card_4_config_provider">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                        <EditText
                                android:id="@+id/pickup_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <Button
                                    android:id="@+id/btn_save_pickup_address"
                                    android:layout_width="100dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentEnd="true"
                                    android:background="@color/colorPrimary"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorWhite"
                                    android:text="@string/btn_save"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>

</android.support.constraint.ConstraintLayout>