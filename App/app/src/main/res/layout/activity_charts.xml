<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".provider.ChartsActivity">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/go_chart_orders"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:text="Pedidos recebidos"/>
        <Button
                android:id="@+id/go_chart_delivered"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:layout_below="@id/go_chart_orders"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:text="Pedidos entregues"/>
        <Button
                android:id="@+id/go_chart_wasted"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:layout_below="@+id/go_chart_delivered"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:text="DesperdÃ­cio"/>

    </RelativeLayout>

</LinearLayout>